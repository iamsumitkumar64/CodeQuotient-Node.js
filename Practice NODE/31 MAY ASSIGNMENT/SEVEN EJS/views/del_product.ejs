<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Product Form</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            scrollbar-width: none;
            font-weight: 900;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #121212;
            color: #e0e0e0;
            font-size: 1.1vmax;
            font-weight: 500;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: .5vmax;
            padding: 1vmax;
        }

        h1 {
            text-align: center;
            font-size: 4vmax;
            margin-bottom: 4vmin;
            color: #ffffff;
        }

        form {
            background-color: #1e1e1e;
            padding: 1vmax;
            border-radius: 1.5vmin;
            width: 80%;
            max-width: 60vmax;
            margin: 0 auto;
            box-shadow: 0 0 2vmax rgba(0, 0, 0, 0.5);
        }

        label {
            display: block;
            margin-top: 1.5vmin;
            margin-bottom: 0.5vmin;
            font-weight: 600;
            color: #cfcfcf;
        }

        input[type="text"],
        input[type="file"],
        textarea {
            width: 95%;
            padding: 1.8vmin;
            margin-bottom: 2vmin;
            border: 0.2vmin solid #444;
            border-radius: 1vmin;
            background-color: #2c2c2c;
            color: #e0e0e0;
            font-size: 1vmax;
        }

        textarea {
            resize: vertical;
        }

        button {
            padding: 1.8vmin 4vmin;
            background-color: #0d6efd;
            color: #ffffff;
            border: none;
            border-radius: 1vmin;
            cursor: pointer;
            font-size: 1vmax;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #084298;
        }

        .btn {
            top: 3vmin;
            right: 5vmin;
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 1.5vmin 3vmin;
            border-radius: 1vmin;
            cursor: pointer;
            font-size: 1vmax;
            margin-left: 2vmin;
        }

        .btn:hover {
            background-color: #a71d2a;
        }
    </style>
</head>

<body>
    <header>
        <h1>Delete Product</h1>
        <div>
            <button class="btn">All Products</button>
            <button class="btn">My Products</button>
            <button class="btn">Add Products</button>
            <button class="btn">Edit Products</button>
            <button class="btn">LogOut</button>
        </div>
    </header>
    <form action="/delete" method="post">
        <label for="product">Product Name:</label>
        <input type="text" id="product" name="product" required>
        <label for="desciption">Description:</label>
        <textarea id="desciption" name="description" rows="5" required></textarea>
        <button type="submit">Submit</button>
    </form>
    <script>
        document.querySelectorAll('.btn')[0].addEventListener('click', () => {
            window.location.href = '/seen_all';
        });
        document.querySelectorAll('.btn')[1].addEventListener('click', () => {
            window.location.href = '/seen';
        });
        document.querySelectorAll('.btn')[2].addEventListener('click', () => {
            window.location.href = '/add';
        });
        document.querySelectorAll('.btn')[3].addEventListener('click', () => {
            window.location.href = '/edit';
        });
        document.querySelectorAll('.btn')[4].addEventListener('click', () => {
            window.location.href = '/logout';
        });
    </script>
</body>

</html>