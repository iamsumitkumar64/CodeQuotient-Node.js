<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Checkout Page</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            scrollbar-width: none;
            font-weight: 900;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #121212;
            color: #e0e0e0;
            font-size: 1.1vmax;
            font-weight: 500;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: .5vmax;
            padding: .5vmax;
        }

        h1 {
            text-align: center;
            font-size: 2vmax;
            margin-bottom: 4vmin;
            color: #ffffff;
        }

        form {
            background-color: #1e1e1e;
            padding: 1vmax;
            border-radius: 1.5vmin;
            width: 60%;
            max-width: 40vmax;
            margin: 0 auto;
            font-weight: 900;
            box-shadow: 0 0 2vmax rgba(0, 0, 0, 0.5);
        }

        label {
            display: block;
            margin-top: 1vmin;
            margin-bottom: 0.5vmin;
            color: #cfcfcf;
        }

        input[type="text"],
        input[type="email"],
        input[type="number"],
        textarea {
            width: 95%;
            padding: 1.5vmin;
            margin-bottom: 2vmin;
            border: 0.2vmin solid #444;
            border-radius: 1vmin;
            background-color: #2c2c2c;
            color: #e0e0e0;
            font-size: 1vmax;
        }

        textarea {
            resize: vertical;
        }

        button {
            color: white;
            background-color: #313131;
            cursor: pointer;
            padding: .5vmax;
            border-radius: 0.5vmin;
            font-size: 2vmin;
            font-weight: 900;
            border-radius: 1vmax;
            transition: all 0.3s ease;
        }

        button:hover {
            transform: scale(1.2);
            color: black;
            background-color: #fdffff;
        }
    </style>
</head>

<body>
    <header>
        <h1>Checkout</h1>
        <div>
            <button class="btn">All Products</button>
            <button class="btn">LogOut</button>
        </div>
    </header>
    <form action="/checkout" method="post">
        <label for="email">Email Address:</label>
        <input type="email" id="email" name="email" readonly>

        <label for="amount">Amount:</label>
        <input type="text" id="amount" name="amount" readonly>

        <label for="address">Shipping Address:</label>
        <textarea id="address" name="address" rows="4" required></textarea>

        <label for="card">Card Details:</label>
        <input type="text" id="card" name="card" placeholder="Card Number - MM/YY - CVV" required>

        <label for="notes">Order Notes (Optional):</label>
        <textarea id="notes" name="notes" rows="3"></textarea>

        <button type="submit">Place Order</button>
    </form>

    <script>
        document.querySelectorAll('.btn')[0].addEventListener('click', () => {
            window.location.href = '/main';
        });
        document.querySelectorAll('.btn')[1].addEventListener('click', () => {
            window.location.href = '/logout';
        });
        async function getdata() {
            const response = await fetch('/api/showorder');
            const data = await response.json();
            document.getElementById('email').value = data.email;
            document.getElementById('amount').value = data.total_amount;
        }
        window.addEventListener('DOMContentLoaded', getdata);
    </script>
</body>

</html>